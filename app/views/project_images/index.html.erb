<div class="container">
	<div class="jumbotron">
		<h1>My Project Images Index Page</h1>
	</div>
	<%= link_to "Add Image", new_project_image_path, class: "btn btn-info" %>
	<% @project_images.each_slice(3) do |project| %>
			<% project.each do |p| %>
				<div class="col-md-2">
					<h2><%= link_to p.name, project_image_path(p) %></h2>
					<%= image_tag(p.urlpath, width: '100') %>
					<br>
				</div>
			<% end %>
	<% end %>

	
</div>