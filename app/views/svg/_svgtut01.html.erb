<svg viewBox="0 0 600 300" class="svg-defs">
  <!-- Symbol with text -->
  <symbol id="s-text">
    <text text-anchor="middle"
          x="50%" y="50%" dy=".35em"
          class="text">
      AWESOME
    </text>
   </symbol>

   <!-- Mask with text -->
   <mask id="m-text"
      maskunits="userSpaceOnUse"
      maskcontentunits="userSpaceOnUse">

     <rect
           width="100%"
           height="100%"
           class="mask__shape"/>
     <use xlink:href="#s-text"
        class="mask__text"/>

  </mask>
</svg>