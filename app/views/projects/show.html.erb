<div class="col-md-4">
	<h2><%= @project.title %></h2>
	<h3><%= @project.description %></h3>
	<button id="toggle-project-detail">Show Detail</button>
	<div id="project-detail">
		<p><%= @project.designer %></p>
		<p><%#= @project.category.name %></p>
	</div>
</div>

<% if @project.project_image.present? %>
	<%#= @project_images[0].name %>
	<% @project.project_image.each do |image| %>
		<%= image_tag(image.urlpath) %>
	<% end %>
<% end %>

<div class="links btn-group">
<% if user_signed_in? %>
	<% if @project.user_id == current_user.id %>
		<%= link_to "Edit Projet", edit_project_path(@project) %>
		<%= link_to "Delete Project", project_path(@project), method: :delete, data: { confirm: "Are you sure?"} %>
	<% end %>
<% end %>

</div>